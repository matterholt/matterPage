---
const {
  tag,
  varient = ["dark"],
  textAlign = "left",
  addAClass = "",
  Cssvars = {},
  class: className,
  ...rest
} = Astro.props;
const Element = tag || "span";
---

<Element class="content_commonformat" class:list={[className]} {...rest}>
  <slot />
</Element>
<style is:global>
  .scopedContent,
  .content_commonformat {
    text-align: var(--common_textAlign);
    font-family: "Inter Variable", sans-serif;
  }
  span.content_commonformat {
    font-family: "Inter Variable", sans-serif;
    font-size: 0.8rem;
  }
  .scopedContent p,
  .scopedContent li,
  p.content_commonformat {
    font-weight: 300;
    font-size: 1.2rem;
    letter-spacing: 1.5px;
    line-height: 1.5;
  }
  .scopedContent h1,
  h1.content_commonformat {
    font-size: 3.7rem;
    font-family: "Doto Variable", sans-serif;
  }

  .scopedContent h2,
  h2.content_commonformat {
    font-family: "Crimson Pro Variable", serif;
    font-weight: 700;
    font-size: 3.1rem;
    margin: 5px;
    letter-spacing: 2px;
  }
  .scopedContent h3,
  h3.content_commonformat {
    font-family: "Crimson Pro Variable", serif;
    font-size: 1.8rem;
    letter-spacing: 2px;
  }
  h4.content_commonformat {
    font-family: "Crimson Pro Variable", serif;
    font-size: 1.5rem;
    letter-spacing: 2px;
  }
</style>
