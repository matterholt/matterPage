---
const {
  tag,
  varient = ["dark"],
  textAlign = "left",
  addAClass = "",
  Cssvars = {},
  class: className,
  ...rest
} = Astro.props;
const Element = tag || "span";
---

<Element class="content_commonformat" class:list={[className]} {...rest}>
  <slot />
</Element>
<style is:global>
  .scopedContent,
  .content_commonformat {
    text-align: var(--common_textAlign);
  }
  span.content_commonformat {
    font-family: "Crimson_Text";
    font-size: 0.8rem;
    font-family: "Doto";
  }
  .scopedContent p,
  .scopedContent li,
  p.content_commonformat {
    font-family: "Inter";
    font-weight: 200;
    font-size: 1.2rem;
    letter-spacing: 1.5px;
    line-height: 1.5;
  }
  .scopedContent h2,
  h2.content_commonformat {
    font-family: "Crimson_Text";
    font-size: 3rem;
    margin: 5px;
    letter-spacing: 2px;
  }
  .scopedContent h3,
  h3.content_commonformat {
    font-family: "Crimson_Text";
    font-size: 1.8rem;
    font-weight: 400;
    letter-spacing: 2px;
  }
  h4.content_commonformat {
    font-family: "Crimson_Text";
    font-size: 1.5rem;
    letter-spacing: 2px;
  }
</style>
