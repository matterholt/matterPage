---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<ul class="tagList">
  {tags.map((tag) => <li>{tag}</li>)}
</ul>
<style>
  .tagList {
    list-style-type: none;
    display: flex;
    gap: 10px;
    grid-row: 2;
    grid-column: 1 / 3;
    justify-self: center;
    li {
      /* border: solid 1px white; */
      padding: 5px;
      border-radius: 10px;
      text-transform: uppercase;
    }
  }
</style>
