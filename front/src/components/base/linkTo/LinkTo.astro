---
interface Props {
  path: string;
  type: string;
}
const { path, type } = Astro.props;

const linkType = type == "external" ? "_blank" : "_self";
---

<a
  class:list={["link_base", "fontStyle"]}
  target={linkType}
  rel="noopener noreferrer"
  href={path}
>
  <slot />
</a>

<style>
  .link_base {
    min-width: 50px;
    padding: 10px;
    border-radius: 15px;
    font-size: 1.2rem;
    margin: 10px;
    text-decoration: none;
    background-color: rgba(255, 255, 255, 0.06);
  }

  a {
    color: var(--main_white);
    /* border-bottom: 2px solid var(--main_accent-blue); */
  }
  a:active {
    color: var(--main_accent-blue);
  }

  .fontStyle {
    text-decoration: none;
    font-family: "Doto Variable", sans-serif;
    font-weight: 300;
    font-size: 25px;
  }
</style>
