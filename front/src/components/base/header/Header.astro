---
import Text from "../text/Text.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header>
  <slot name="topNav" />
  <Text tag="h1">{title}</Text>
</header>
<style>
  header {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>
