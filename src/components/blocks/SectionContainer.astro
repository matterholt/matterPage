---
const { varient, class: className, ...rest } = Astro.props;

const sectionWidth = varient === "full" ? "100%" : "";
---

<section
  class:list={["flex flex-col px-2 md:px-20 mb-20", className]}
  {...rest}
>
  <slot />
</section>
<style define:vars={{ sectionWidth }}>
  section {
    width: var(--sectionWidth, 1024px);
    margin-top: var(--section-margin-top, 80px);
  }
</style>
