---
const {
  tag,
  addAClass = "",
  Cssvars = {},
  class: className,
  ...rest
} = Astro.props;

const Element = tag || "span";
// font-black text-3xl text-center mt-2 p-5 uppercase"
---

<Element class:list={["content_commonformat", className]} {...rest}>
  <slot />
</Element>

<style define:vars={addAClass} scoped>
  div {
  }
  h4 {
    font-size: 20px;
    font-weight: 600;
    letter-spacing: -0.5px;
    line-height: 30px;
  }

  h3 {
    font-size: 24px;
    font-weight: 600;
    letter-spacing: -0.6px;
    line-height: 32px;
  }

  h2 {
    font-weight: 700;
    letter-spacing: -0.75px;
    line-height: 42px;
    font-size: 55px;
    line-height: 1.2;
  }

  h1 {
    font-size: 48px;
    font-weight: 700;
    letter-spacing: -0.75px;
    line-height: 40px;
  }
  p {
    margin: auto;
    font-size: var(--fontSize, 17.5x);
    font-weight: 00;
    letter-spacing: normal;
    line-height: 27.4px;
    margin-top: 6px;
    margin-bottom: 6px;
  }
  .content_commonformat {
    margin: var(--all_font_margin, 10px);
  }
</style>
