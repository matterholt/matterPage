---
const {
  varient = "base",
  sectionMarginTop,
  Cssvars = {},
  class: className,
  ...rest
} = Astro.props;

//make light/ dark /tranperent with white fonts

const lightBox = varient === "light";
const darkBox = varient === "dark";
---

<section
  class:list={[
    "section_base",
    className,
    { lightContainer: lightBox },
    { darkContainer: darkBox },
  ]}
  {...rest}
>
  <slot />
</section>

<style define:vars={Cssvars}>
  .section_base {
    width: 100vw;
    min-height: 50vh;
    max-width: 1440px;
    margin: var(--sectionMarginControl, 0px);
    border-radius: 10px;
  }
  .darkContainer {
    color: var(--main_black, #000);
    background-color: rgba(248, 250, 252, 0.85);

  }
  .lightContainer {
    background-color: var(--main_white, #fff);
    color: var(--main_black, #000);
  }
</style>
