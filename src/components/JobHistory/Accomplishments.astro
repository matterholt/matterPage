---
import FeatAside from "./FeatsAside.astro"
const {feats} = Astro.props
---

<aside>
    <h3>Accomplishments</h3>
    <ul>
     {feats.map(x => <li key={x.id}><FeatAside feat={x}/></li>)}
    </ul>
</aside>

<style>
h3{
    text-align: center;
    font-weight: 900;
    padding: 15px;
    margin:0;
    background-color: var(--fav-dark);
    color:var(--main-white)
}
    aside{
         max-width: 640px;
         background-color: #f2f4f7;
         height: 100vh;
         border-radius: 10px;
         overflow: hidden;
         }
ul{
    overflow-y: scroll;
    height: 100vh;
    list-style: none;
    margin:0;
    padding:0;
}
</style>