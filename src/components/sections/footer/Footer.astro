---
import { Box,Text ,BentoBox,Logo} from "@components/lib_comps/";
import { BottomCurve } from "@components/svg";
import {SocialLinkCode} from "@components/blocks"

import SocialLink from "@components/blocks/SocialLink.jsx";
---

<footer>
  <Box varient="dark" class="footer_layout">
    <BentoBox class="footer_code_playground">
      <Text tag="h5">code playground</Text>
    <BentoBox>
    <SocialLinkCode propChoice="stackblitz" />
  </BentoBox>
  <BentoBox>
    <SocialLinkCode propChoice="replit" />
  </BentoBox>
  <BentoBox>
    <SocialLinkCode propChoice="codepen" />
  </BentoBox>
    </BentoBox>
<BentoBox  class="footer_socilal_links">

  <SocialLink />
</BentoBox>
<BentoBox class="footer_site_logo">
  <Logo size="50mm" color="rgb(191, 143, 43)"/>
</BentoBox>

    <BentoBox class="footer_other_content">

    <Text tag="p">
      All Rights Reserved</br>Website & Hosting by Matterholt made
    </Text>
    
</BentoBox>
  </Box>
</footer>

<style>


  .footer_layout{
    margin-top:50px;
   padding:20px;
    width: 100vw;
   display: grid;
   gap:20px;
   grid-template-columns: repeat(3, 1fr);
   grid-template-rows: repeat(2, 1fr);
   grid-template-areas:
     "footerCodePlayground footerSocilalLinks  footerSiteLogo"
     "footerCodePlayground footerOtherContent footerSiteLogo";
    }
    .footer_code_playground{
      grid-area: footerCodePlayground;
      padding: 40px;

      display: flex;
      justify-content: space-evenly;
      text-align: center;
      text-transform: uppercase;
      gap:20px;

    }
    .footer_socilal_links{
      grid-area: footerSocilalLinks;
      display: grid;
      place-items: center;

    }
    .footer_site_logo{
      grid-area: footerSiteLogo;    
      display: grid;
      place-items: center;
      padding:50px;
    }
    .footer_other_content{
      color:var(--main_white);
      grid-area: footerOtherContent;
      text-align: center;
      display: grid;
      place-items: center;
  }


  @media (max-width: 640px) { 
    .footer_layout {
      padding: 10px;
      grid-template-columns: repeat(1, 1fr);
     grid-template-rows: repeat(2, 1fr);
      grid-template-areas:
      "footerSiteLogo"
      "footerSocilalLinks"
     "footerCodePlayground"
     "footerOtherContent";
     
    }
  }
  @media (max-width: 768px) { 
    .footer_layout {
      padding: 10px;
      grid-template-columns: repeat(2, 1fr);
     grid-template-rows: repeat(3, 1fr);
      grid-template-areas:
      "footerSiteLogo footerSiteLogo"
     "footerCodePlayground footerCodePlayground"
     "footerOtherContent footerSocilalLinks ";
     
    }
  }
</style>
