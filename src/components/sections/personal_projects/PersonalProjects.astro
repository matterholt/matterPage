---
import * as data from "./data/personalProjects.json";
import { Text, Heading } from "@components/lib_comps/index";
import { ProjectDetail, SectionContainer } from "@components/blocks";

const { projectsOne, projectsTwo } = data;
---

<SectionContainer parentColor="bgLight">
  <Heading>
    <Text tag="h2">Projects</Text>
  </Heading>
  <slot />

  <div class="flex flex-col md:flex-row">
    <ul class="flex flex-col md:w-1/2">
      {projectsOne.map((project) => <ProjectDetail project={project} />)}
    </ul>
    <ul class="flex flex-col md:w-1/2">
      {projectsTwo.map((project) => <ProjectDetail project={project} />)}
    </ul>
  </div>
</SectionContainer>
