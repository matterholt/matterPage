---
import { PostIntro, Text, Alink } from "@components/lib_comps/index";
import { filterCollectionsBy } from "@utils/post_collections/";
import { SectionContainer, InternalLink, DateIt } from "@components/blocks";

const latestPost = await filterCollectionsBy("most_recent");

const { id, link, title } = {
  id: "writeups",
  link: "\\writeups",
  title: "write ups",
};
---

<SectionContainer>
  <div class="latestpost_layout">
    <Text tag="h2">What has peek my Interest</Text>
    <div class="latestpost_writeup">
      <PostIntro postFrontMatter={latestPost} />
    </div>
    <div class="latestpost_linktomore">
      <InternalLink>Write Ups</InternalLink>
    </div>
  </div>
</SectionContainer>
<style>
  .latestpost_layout {
    display: grid;
    grid-template-rows: 70px 1fr;
    grid-template-columns: 1fr 150px;
  }
  .latestpost_writeup {
    grid-column: 1;
    grid-row: 2;
  }
  .latestpost_linktomore {
    grid-column: 2;
    grid-row: 2;
    justify-self: flex-end;
  }
</style>
