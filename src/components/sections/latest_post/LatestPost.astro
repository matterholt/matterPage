---
import { PostIntro, Text, Alink } from "@components/lib_comps/index";
import { filterCollectionsBy } from "@utils/post_collections/";
import { SectionContainer, InternalLink, DateIt } from "@components/blocks";

const latestPost = await filterCollectionsBy("most_recent");

const { id, link, title } = {
  id: "writeups",
  link: "\\writeups",
  title: "write ups",
};
---

<SectionContainer>
  <Text tag="h2">What has peek my Interest</Text>
  <div class="latest_writeup">
    <DateIt YY="2022" dd="14" mm="12" />
    <PostIntro postFrontMatter={latestPost} />
  </div>
  <!-- <Alink {id} {link}>
    {title}
  </Alink> -->
  <InternalLink>Write Ups</InternalLink>
</SectionContainer>
<style>
  .latest_writeup {
    display: flex;
    outline: solid;
    padding: 20px;
  }
</style>
