---
import { Text } from "@components/lib_comps/index";
const { char } = Astro.props;
---

<div class="large_letter_circle">
  <Text class="large_letter">{char}</Text>
</div>
<style>
  .large_letter_circle {
    border-radius: 100%;
    background-color: var(--main_black);
    height: 100px;
    width: 100px;
    color: var(--main_white);
    position: relative;
    top: -75px;
    left: -70px;
  }
  .large_letter {
    color: var(--main_gold);
    font-size: 100px;
    margin: auto 0;
    position: absolute;
    top: -15%;
    left: 20%;
    z-index: 10;
    font-family: "Hanuman-reg Courier New", Courier, monospace;
  }
</style>
