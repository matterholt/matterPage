---
// Component Imports
import { PageLayout } from "@layouts/index";
import { BottomCurve, TopCurve } from "@components/svg";

import {
  ProfessionalWorkExperience,
  PersonalBio,
  MoreAbout,
  HeroHome,
  LatestPost,
} from "@components/sections/";
---

<PageLayout pageId="home">
  <HeroHome />
  <div class="curvedBorder">
    <BottomCurve />
  </div>
  <LatestPost />
  <MoreAbout />
  <ProfessionalWorkExperience />
</PageLayout>

<style>
  #mainBody {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .curvedBorder {
    width: 100vw;
    max-width: 1440px;
    overflow: hidden;
  }

</style>
