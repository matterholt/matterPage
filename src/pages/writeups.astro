---
import Main from "@layouts/page_layout/PageLayout.astro";
import { PostIntro, Text, Heading } from "@components/lib_comps/";
import { filterCollectionsBy } from "@utils/helpers/post_collections/";

const [currentYear, OtherYears] = await filterCollectionsBy("current_year");
---

<Main pageId="writeups">
  <Heading>
    <Text tag="h2">latest Posts</Text>
  </Heading>
  {currentYear.map((x) => <PostIntro postFrontMatter={x} />)}
  <Text tag="h2">Previous Years</Text>
  {OtherYears.map((x) => <PostIntro varient="simple" postFrontMatter={x} />)}
</Main>

<style>
  .blog_sections {
    margin-bottom: 100px;
  }
  .section_header {
    font-weight: 700;
    font-size: 30px;
    margin: 50px 0px;
    text-transform: uppercase;
    text-align: center;
    width: 100%;
  }

  .list_container {
    margin-bottom: 50px;
  }
  .list {
    margin: 25px 0px;
  }
</style>
